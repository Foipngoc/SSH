<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 每个class对应一个持久化对象 -->
<hibernate-mapping>
	<class name="com.privilege.model.Permission" table="permission">
		<id name="id" column="id" type="integer">
			<generator class="native" />
		</id>
		<property name="permname" column="permname" type="string"
			length="20" not-null="true"></property>
		<property name="permtype" column="permtype" type="int"
			not-null="true"></property>
		<property name="permdesc" column="permdesc" type="string"
			length="255"></property>
	</class>
</hibernate-mapping>