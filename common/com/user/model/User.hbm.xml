<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 每个class对应一个持久化对象 -->
<hibernate-mapping>
	<class name="com.user.model.User" table="user">
		<id name="id" column="id" type="integer">
			<generator class="native" />
		</id>
		<property name="username" column="username" type="string"
			length="64" not-null="true"></property>
		<property name="password" column="password" type="string"
			length="64" not-null="true"></property>
		<property name="usertype" column="usertype" type="integer"
			not-null="true"></property>
		<property name="createtime" column="createtime" type="timestamp"
			not-null="true"></property>
		<property name="userstatus" column="userstatus" type="integer"
			not-null="true"></property>
	</class>
</hibernate-mapping>